// Commentaire: datasource pour Prisma avec Neon (PostgreSQL)
// Commentaire: les commentaires sont en troisieme personne et sans accents

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

